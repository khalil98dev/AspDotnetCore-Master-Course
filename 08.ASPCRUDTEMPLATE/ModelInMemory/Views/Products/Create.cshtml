@model Modeles.Product; 
@{
    ViewData["Title"] = "Create new Project"; 
}

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Prodduct Name: </label>
        <input asp-for="Name" type="text" class="form-control" autocomplete="false">
    </div>
    <div class="mb-3"></div>
        <label asp-for="Price" class="form-label">Price: </label>
        <input asp-for="Price" type="number" class="form-control" autocomplete="false">
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="index" class="btn btn-danger">Cancell</a>
</form>